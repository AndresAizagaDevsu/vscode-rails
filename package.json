{
    "name": "rails",
    "displayName": "rails",
    "description": "Ruby on Rails \"Asset Helpers\" and \"Tag Helpers\" snippets.",
    "version": "0.5.0",
    "publisher": "bung87",
    "icon": "rails.png",
    "engines": {
        "vscode": "^1.19.3"
    },
    "galleryBanner": {
        "color": "#c52f24",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/bung87/vscode-rails.git"
    },
    "homepage": "https://github.com/bung87/vscode-rails",
    "license": "SEE LICENSE IN LICENSE.md",
    "bugs": {
        "url": "https://github.com/bung87/vscode-rails/issues"
    },
    "categories": [
        "Languages",
        "Snippets",
        "Other"
    ],
    "keywords": [
        "rails",
        "ROR",
        "Ruby on Rails",
        ".erb"
    ],
    "activationEvents": [
        "onCommand:rails-nav",
        "onLanguage:ruby"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "rails-nav",
                "title": "Rails Nav"
            }
        ],
        "keybindings": [
            {
                "command": "rails-nav",
                "key": "Alt+."
            }
        ],
        "snippets": [
            {
                "language": "javascript",
                "path": "./snippets/javascript.json"
            },
            {
                "language": "html",
                "path": "./snippets/html.json"
            },
            {
                "language": "css",
                "path": "./snippets/css.json"
            },
            {
                "language": "scss",
                "path": "./snippets/scss.json"
            },
            {
                "language": "ruby",
                "path": "./snippets/ruby.json"
            }
        ],
        "languages": [
            {
                "id": "html",
                "aliases": [
                    "html.erb"
                ],
                "extensions": [
                    ".html.erb",
                    ".rhtml",
                    ".rhtm"
                ]
            },
            {
                "id": "javascript",
                "aliases": [
                    "js.erb"
                ],
                "extensions": [
                    ".js.erb"
                ]
            },
            {
                "id": "css",
                "aliases": [
                    "css.erb"
                ],
                "extensions": [
                    ".css.erb"
                ]
            },
            {
                "id": "scss",
                "extensions": [
                    ".scss"
                ]
            }
        ],
        "grammars": [
            {
                "language": "html",
                "scopeName": "text.html.erb",
                "path": "./syntaxes/erb.tmLanguage"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "mocha": "^2.3.3",
        "vscode": "^1.1.13",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "vscode": "^1.1.13",
        "vscode-languageclient": "^4.0.0",
        "vscode-languageserver": "^4.0.0",
        "inflection": "^1.10.0"
    }
}
